<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- PRODUCCIÓN: Solo HTTPS por defecto -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- DESARROLLO: Permitir HTTP solo para servidores conocidos -->
    <!-- IMPORTANTE: Cambiar a HTTPS en producción real -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Servidor AWS Primary -->
        <domain includeSubdomains="false">18.216.180.19</domain>
        <!-- Servidor AWS Secondary -->
        <domain includeSubdomains="false">18.118.212.247</domain>
        <domain includeSubdomains="false">18.220.8.226</domain>
        <!-- Localhost para desarrollo -->
        <domain includeSubdomains="false">10.0.2.2</domain>
        <domain includeSubdomains="false">localhost</domain>
        <domain includeSubdomains="false">127.0.0.1</domain>
        <!-- Red local -->
        <domain includeSubdomains="false">192.168.1.100</domain>
    </domain-config>
</network-security-config>
