{
  "name": "sistema-calidad-web-panel",
  "version": "1.0.0",
  "description": "Panel Web Administrativo - Sistema de Calidad HACCP",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "deploy": "npm run build && echo '✅ Build completado. Sube los archivos de dist/ al servidor'",
    "deploy:prod": "npm run build:prod && echo '✅ Build de producción completado. Sube los archivos de dist/ al servidor EC2'",
    "clean": "rm -rf dist node_modules/.cache",
    "dev:remote": "vite --host 0.0.0.0 --port 3000",
    "sync": "git add . && git commit -m \"Auto-sync: $(date)\" && git push origin main"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.19",
    "@mui/material": "^5.14.20",
    "axios": "^1.6.2",
    "date-fns": "^2.30.0",
    "exceljs": "^4.4.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-router-dom": "^6.20.0",
    "recharts": "^2.10.3",
    "xlsx": "^0.18.5",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "terser": "^5.44.0",
    "vite": "^5.0.8"
  }
}
